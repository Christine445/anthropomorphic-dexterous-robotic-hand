    pwm1.setPWM(1, 0, 420);               //12
    pwm1.setPWM(9, 0, 200);               //32
    pwm2.setPWM(0, 0, 200);               // 41 servo motor / Pin 0 --> stretch MCP
    //pwm1.setPWM(4, 0, 400);               // 21
    //delay(2000);
    //pwm1.setPWM(5, 0, 150);
    //delay(2000);

/*
